<h2 class="mb-4">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="field mt-2 mb-3 form-group">
<%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"Full Name" %>
</div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control mb-3", placeholder:"Email" %>
  </div>
 
  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Password" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mb-3", placeholder:"Confirm Password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class:"btn btn-success mb-3" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>